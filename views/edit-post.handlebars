<div class="post card">
    <div class="card-header">
        <h2>Edit Post</h2>
    </div>
    <form id="edit-post-form" class="card-body">
        <input type="hidden" id="post-id" name="post-id" value="{{post.id}}" />
        <label class="form-label" for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" value="{{post.title}}" class="form-input" />
        <label class="form-label" for="post-body">Content</label>
        <textarea type="text" id="post-body" name="post-body" value="{{post.body}}"></textarea>
        <button type="submit" class="btn">Update</button>
        <button type="button" id="delete-btn" class="btn">Delete Post</button>
    </form>
</div>

<script src="/javascript/edit.js"></script>
<script src="/javascript/delete.js"></script>
<div class ="posts flex-row justify-center">
    {{#each reviews}}
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/review/{{id}}">{{title}}</a>
            </h2>
            <div>
                Written by {{User.username}} on {{format_date createdAt}}
            </div>
        </div>
        <div class="card-body">
            {{body}}
        </div>
    </article>
    {{/each}}
</div>